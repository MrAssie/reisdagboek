generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id          String       @id @default(cuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  totalBudget Float        @default(0)
  coverImage  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  days        Day[]
  budgetItems BudgetItem[]
}

model Day {
  id         String     @id @default(cuid())
  date       DateTime
  title      String
  notes      String?
  tripId     String
  trip       Trip       @relation(fields: [tripId], references: [id], onDelete: Cascade)
  activities Activity[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([tripId])
}

model Activity {
  id          String   @id @default(cuid())
  name        String
  description String?
  location    String?
  address     String?
  latitude    Float?
  longitude   Float?
  placeId     String?
  startTime   String?
  endTime     String?
  category    String   @default("sightseeing")
  cost        Float    @default(0)
  currency    String   @default("EUR")
  photoUrl    String?
  rating      Float?
  dayId       String
  day         Day      @relation(fields: [dayId], references: [id], onDelete: Cascade)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dayId])
}

model BudgetItem {
  id        String   @id @default(cuid())
  name      String
  category  String
  amount    Float
  currency  String   @default("EUR")
  paid      Boolean  @default(false)
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tripId])
}
